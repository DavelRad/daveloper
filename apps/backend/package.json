{
  "name": "daveloper-api-gateway",
  "version": "1.0.0",
  "description": "NestJS API Gateway for Daveloper.dev - handles WebSocket streaming, gRPC communication, and REST endpoints",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "nodemon --exec ts-node src/main.ts",
    "start:debug": "nodemon --exec ts-node --inspect=0.0.0.0:9229 src/main.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs",
    "websocket",
    "grpc",
    "api-gateway",
    "redis",
    "portfolio"
  ],
  "author": "DavelRad",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.12.7",
    "@grpc/proto-loader": "^0.7.15",
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^11.1.5",
    "@nestjs/microservices": "^11.1.5",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/platform-socket.io": "^11.1.5",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^11.1.5",
    "@supabase/supabase-js": "^2.47.17",
    "@types/uuid": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "ioredis": "^5.4.2",
    "isomorphic-dompurify": "^2.26.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.9",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
